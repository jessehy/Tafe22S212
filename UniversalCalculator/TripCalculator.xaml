<Page
    x:Class="Calculator.TripCalculator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
		<StackPanel Background="AliceBlue">
			<StackPanel>
				<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
					<TextBlock x:Name="TitleTxtBlock" Text="Trip Calculator" HorizontalAlignment="Center" FontSize="50" Margin="15"/>
				</StackPanel>
				<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
					<TextBlock x:Name="lblMessage" Text="Trip calculator C# code will be developed later" FontSize="30" Margin="20" />
				</StackPanel>

			</StackPanel>
				<Button x:Name="exitButton" HorizontalAlignment="Center" Content="Exit" Width="200" Height="60" FontSize="20" Margin="30" Click="exitButton_Click"/>
		</StackPanel>
	</Grid>
</Page>
